{
  "GET /api": {
    "description": "serves up a json representation of all the available endpoints of the api"
  },
  "GET /api/topics": {
    "description": "serves an array of all topics",
    "queries": [],
    "exampleResponse": {
      "topics": [{ "slug": "football", "description": "Footie!" }]
    }
  },
  "GET /api/articles": {
    "description": "serves an array of all articles",
    "queries": ["topic", "sort_by", "order"],
    "exampleResponse": {
      "articles": [
        {
          "author": "icellusedkars",
          "title": "Seafood substitutions are increasing",
          "article_id": 1,
          "topic": "mitch",
          "created_at": "2018-05-30T15:59:13.341Z",
          "votes": 0,
          "article_img_url": "https://images.pexels.com/photos/158651/news-newsletter-newspaper-information-158651.jpeg?w=700&h=700",
          "comment_count": 6
        }
      ]
    }
  },
  "GET /api/articles/:article_id": {
    "description": "serves an article with a given id",
    "queries": [],
    "exampleResponse": {
      "article": [
        {
          "article_id": 1,
          "title": "Living in the shadow of a great man",
          "topic": "mitch",
          "author": "butter_bridge",
          "body": "I find this existence challenging",
          "created_at": "2020-07-09T20:11:00.000Z",
          "votes": 100,
          "article_img_url": "https://images.pexels.com/photos/158651/news-newsletter-newspaper-information-158651.jpeg?w=700&h=700"
        }
      ]
    }
  },
  "GET /api/articles/:article_id/comments": {
    "description": "serves an array of all comments for a given article id",
    "queries": [],
    "exampleResponse": {
      "comments": [
        {
          "comment_id": 3,
          "votes": 100,
          "created_at": "2020-03-01T01:13:00.000Z",
          "author": "icellusedkars",
          "body": "Replacing the quiet elegance of the dark suit and tie with the casual indifference of these muted earth tones is a form of fashion suicide, but, uh, call me crazy â€” onyou it works.",
          "article_id": 1
        }
      ]
    }
  },
  "POST /api/articles/:article_id/comments": {
    "description": "posts a new comment to a given article",
    "queries": [],
    "body": { "username": "insert username", "body": "insert comment" },
    "exampleResponse": {
      "comment": [
        {
          "comment_id": 19,
          "body": "This is a great article",
          "article_id": 7,
          "author": "butter_bridge",
          "votes": 0,
          "created_at": "2024-04-16T11:13:56.906Z"
        }
      ]
    }
  },
  "PATCH /api/articles/:article_id": {
    "description": "patches an article with a votes incrementor",
    "queries": [],
    "body": { "inc_votes": 10 },
    "exampleResponse": {
      "article": [
        {
          "body": "This is a great article",
          "article_id": 7,
          "author": "butter_bridge",
          "votes": 10,
          "created_at": "2024-04-16T11:13:56.906Z"
        }
      ]
    }
  },
  "DELETE /api/comments/:comment_id": {
    "description": "deletes a comment from a given comment id"
  },
  "GET /api/users/:username": {
    "description": "serves a user object with a given username",
    "queries": [],
    "exampleResponse": {
      "user": [
        {
          "username": "footiefan123",
          "avatar_url": "https...",
          "name": "james"
        }
      ]
    }
  },
  "PATCH /api/comments/:comment_id": {
    "description": "patches a comment with a votes incrementor",
    "queries": [],
    "body": { "inc_votes": 10 },
    "exampleResponse": {
      "article": [
        {
          "comment_id": 19,
          "body": "This is a great article",
